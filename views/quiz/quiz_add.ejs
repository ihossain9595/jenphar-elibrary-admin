<%- include('../includes/head.ejs') %>

<div id="content_box">
  <div class="main_box">
    <!-- Intro -->
    <div id="title_box_quiz_primary">
      <h1 class="title"><%= title %></h1>
      <hr class="line" />
    </div>
    <!-- Intro -->

    <div id="content_box_quiz_add">
      <!-- ERROR -->
      <div id="error_half">
        <% if (messages.error) { %>
        <div class="message_error">Error! <%- messages.error %></div>
        <% } %> <% if (messages.success) { %>
        <div class="message_success">Success! <%- messages.success %></div>
        <% } %>
      </div>
      <!-- ERROR -->

      <!-- Form -->
      <form id="form" class="add_quiz" action="/quiz/add_quiz" method="POST">
        <label class="label" for="name">
          Name
          <input class="input_text" id="name" name="name" type="text" placeholder="Input quiz name" required />
        </label>

        <label class="label" for="time_duration">
          Quiz Duration
          <input class="input_number" id="time_duration" name="time_duration" type="number" placeholder="Input quiz duration" required />
        </label>

        <label class="label" for="total_points">
          Total Points
          <input class="input_number" id="total_points" name="total_points" type="number" placeholder="Input quiz total points" required />
        </label>

        <label class="label" for="category">
          Category
          <select class="input_select" id="category" name="category" placeholder="Select quiz category" required>
            <option value="" selected>Select quiz category</option>
            <option value="Hematology">Hematology</option>
            <option value="Oncology">Oncology</option>
            <option value="Virology">Virology</option>
            <option value="Combined">Combined</option>
          </select>
        </label>

        <div class="time_box">
          <label class="label" for="start_time">
            Quiz Start
            <input class="input_select" id="start_time" name="start_time" type="datetime-local" required />
          </label>

          <label class="label" for="end_time">
            Quiz End
            <input class="input_select" id="end_time" name="end_time" type="datetime-local" required />
          </label>
        </div>

        <label class="label" for="status">
          Status
          <select class="input_select" id="status" name="status" placeholder="Select quiz status" required>
            <option value="Published" selected>Published</option>
            <option value="Unpublished">Unpublished</option>
          </select>
        </label>

        <button class="button_submit" type="submit">Submit</button>
      </form>
      <!-- Form -->
    </div>
  </div>
</div>

<%- include('../includes/foot.ejs') %>
