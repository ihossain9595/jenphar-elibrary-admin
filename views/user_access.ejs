<%- include('includes/head.ejs') %>

<div id="content_box">
  <div class="main_box">
    <!-- Intro -->
    <div id="title_box_primary">
      <h1 class="title"><%= title %></h1>
      <hr class="line" />
    </div>
    <!-- Intro -->

    <div id="content_box_access">
      <!-- BAR -->
      <% if(data.can_login === '1') { %>
      <div id="access_active">Active</div>
      <% } else { %>
      <div id="access_inactive">Inactive</div>
      <% } %>
      <!-- BAR -->

      <!-- Form -->
      <form class="access" action="/user_access/update" method="post">
        <input name="id" value="1" hidden />

        <label class="label">Select User Access:</label>

        <label class="select_radio" for="yes">
          <input class="access_yes" type="radio" id="yes" name="user_access" value="1" <%= data.can_login === "1" ? 'checked' : "" %>/>
          Active
        </label>
    
        <label class="select_radio" style="margin-bottom: 1.2rem;" for="no">
          <input class="access_no" type="radio" id="no" name="user_access" value="0" <%= data.can_login === "0" ? 'checked' : "" %>/>
          Inactive
        </label>

        <button class="button_submit" type="submit">Update</button>
      </form>
      <!-- Form -->
    </div>
  </div>
</div>

<%- include('includes/admin_layout/foot.ejs') %>
